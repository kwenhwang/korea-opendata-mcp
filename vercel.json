{
  "functions": {
    "api/mcp.ts": {
      "runtime": "@vercel/node"
    },
    "api/health.ts": {
      "runtime": "@vercel/node"
    }
  },
  "routes": [
    { "src": "/mcp", "dest": "/api/mcp" },
    { "src": "/health", "dest": "/api/health" },
    { "src": "/api/(.*)", "dest": "/api/$1" }
  ],
  "env": {
    "HRFCO_API_KEY": "@hrfco_api_key"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}
