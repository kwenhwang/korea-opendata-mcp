{
  "name": "hrfco-mcp-server",
  "version": "1.0.0",
  "description": "HRFCO MCP Server in TypeScript",
  "main": "api/mcp.js",
  "scripts": {
    "dev": "npm run build && netlify dev",
    "build": "npx tsc",
    "build:netlify": "mkdir -p dist/netlify/functions && cp dist/netlify/functions/*.js dist/netlify/functions/ && cp -r dist/src dist/netlify/functions/",
    "deploy:netlify": "netlify deploy --prod"
  },
  "dependencies": {
    "@netlify/functions": "^2.0.0",
    "@types/express": "^5.0.3",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18"
  }
}
