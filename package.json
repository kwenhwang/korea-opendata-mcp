{
  "name": "hrfco-mcp-server",
  "version": "1.0.0",
  "description": "HRFCO MCP Server in TypeScript",
  "main": "api/mcp.js",
  "scripts": {
    "dev": "npm run build && netlify dev",
    "build": "npx tsc && npm run build:netlify",
    "build:netlify": "mkdir -p dist/netlify/functions && cp -r netlify/functions/* dist/netlify/functions/",
    "deploy:netlify": "netlify deploy --prod"
  },
  "dependencies": {
    "@netlify/functions": "^2.0.0",
    "dotenv": "^17.2.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18"
  }
}
